@page "/weather"

@model GruppProjectAPI.Pages.WeatherModel

<h2>Weather Search</h2>

<form method="post">
    <input type="text" asp-for="City" placeholder="Enter city" />
    <button type="submit">Show Weather</button>
</form>

@if (Model.Result != null)
{
    <h3>Results for @Model.City</h3>

    <p><b>Current Temp:</b> @Model.Result.CurrentTemp °C</p>
    <p><b>Humidity:</b> @Model.Result.Humidity %</p>
    <p><b>Forecast Avg Temp:</b> @Model.Result.ForecastAvgTemp °C</p>

    <h4>Days hotter than average:</h4>
    

        <ul>
            @foreach (var item in Model.Result.FilteredForecastDays)
            {
                <li>@item.Day: @item.Temperature °C</li>
            }
        </ul>
       
 

 


}